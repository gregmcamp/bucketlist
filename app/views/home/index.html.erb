<h1>Welcome <%= current_user.first_name %></h1>
<hr/>
<% if @buckets.any? %>
  <% @buckets.each do |bucket| %>
  <ul>
    <li class="collapsible" data-collapsible="expandable">
    <h3><%= link_to bucket.name, bucket_path(bucket) %></h3>
    </li>
    <%= link_to 'Delete Bucket List', bucket_path(bucket), method: :delete %>
    <%= link_to 'Change Bucket List Name', edit_bucket_path(bucket) %>
  </ul>


    <% end %>
  <% else %>
    <h3>You have no Bucketlists</h3>
<% end %>
<%= button_to 'Log Out', destroy_user_session_path, method: :delete %>
<%= button_to 'New Bucket List', new_bucket_path, method: :get %>
